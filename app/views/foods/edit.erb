<h1> edit page </h1>


<form action="/foods/<%=@food.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="name" name="food[name]" value= "<%= @food.name %>" placeholder="What did you eat"> <br>
    <input type="number" name="food[price]" value= "<%= @food.price %>" placeholder="Dollar amount"> <br>
    <input type="text" name="food[description]" value= "<%= @food.description %>" placeholder="How did it taste"> <br>
    <input type="checkbox" id="healthy1" name="food[healthy]" value= "<%= @food.healthy %>">
    <label for="healthy1"> It was healthy</label><br>
    <input type="submit" value="Update Complete"/>
</form>